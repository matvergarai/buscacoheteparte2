{
  "manifest_version": 3,
  "host_permissions": ["<all_urls>"],
  "name": "Detector de Contenido Inapropiado",
  "version": "1.0",
  "description": "Esta extensión detecta y bloquea contenido inapropiado en imágenes y videos.",
  "permissions": [
    "activeTab",
    "scripting",
    "declarativeNetRequest"
    
  ],
  
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon16.png",
    "128": "images/icon16.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "block-all-content",
        "enabled": true,
        "path": "block_rules.json"
      }
    ]
  }
}